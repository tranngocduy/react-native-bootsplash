{
  "name": "react-native-bootscreen",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Display a bootsplash on your app starts. Hide it when you want.",
  "author": "Mathieu Acthernoene <zoontek@gmail.com>",
  "homepage": "https://github.com/zoontek/react-native-bootsplash",
  "types": "dist/typescript/index.d.ts",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "files": [
    "/android",
    "/dist",
    "/ios",
    "/src",
    "RNBootSplash.podspec",
    "ReactNativeBootsplash.res",
    "bsconfig.json",
    "package.json",
    "react-native.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zoontek/react-native-bootsplash.git"
  },
  "keywords": [
    "react-native-bootsplash",
    "react-native",
    "boot-splash",
    "bootsplash",
    "boot-screen",
    "bootscreen",
    "splash-screen",
    "splashscreen",
    "launch-screen",
    "launchscreen"
  ],
  "scripts": {
    "format": "prettier '**/*.{js,json,md,ts,tsx}' --write",
    "prepare": "bob build"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md,ts,tsx}": "prettier --write"
  },
  "peerDependencies": {
    "react-native": ">=0.60.0"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "fs-extra": "^9.0.1",
    "jimp": "^0.16.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@react-native-community/bob": "^0.16.2",
    "@types/fs-extra": "^9.0.4",
    "@types/react-native": "^0.63.36",
    "bs-platform": "^8.3.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.0",
    "react": "16.13.1",
    "react-native": "0.63.3",
    "typescript": "^4.1.2"
  }
}
